<Application x:Class="ConversionProgram.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ConversionProgram"
             StartupUri="View/MainWindow.xaml">

    <!-- Order matters ! -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/GroupBoxes.xaml" />
                <ResourceDictionary Source="Styles/Toolbars.xaml" />
                <ResourceDictionary Source="Styles/Buttons.xaml" />
                <ResourceDictionary Source="Styles/Borders.xaml" />
                <ResourceDictionary Source="Styles/Labels.xaml" />
                <ResourceDictionary Source="Styles/TextBoxes.xaml" />
                <ResourceDictionary Source="Styles/ComboBoxes.xaml" />
                <ResourceDictionary Source="Styles/DatePickers.xaml" />
                <ResourceDictionary Source="Styles/MyScrollViewers.xaml" />
                <ResourceDictionary Source="Styles/ListBoxes.xaml" />
                <ResourceDictionary Source="Styles/MenuItems.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>